<head>
  <style>

  .slide-in {
    top: 0;
  }

  .slide-out {
    top: -100%;
  }
  
    .navbar {
      background-color: #28282B;
      color: #fff;
    }

    .navbar-brand {
      color: #fff;
    }

    .navbar-nav .nav-link {
      color: #fff;
    }

    .navbar-nav .active {
      font-weight: bold;
    }
  </style>
</head>

<body>
  <!-- Add sticky-top class here -->
  <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <button>
    <%= image_tag "profile_pic.jpg", class: "logo", width: "100", height: "100" %>
    <%= link_to "Alex Tanchyn", root_path, class: "navbar-brand", style: "color: black;" %>
      </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
      
        <li class="nav-item <%= 'active' if current_page?(portfolio_path) %>">
          <%= link_to "Portfolio", portfolio_path, class:"nav-link" %>
        </li>
        <li class="nav-item <%= 'active' if current_page?(social_path) %>">
          <%= link_to "Social", social_path, class:"nav-link" %>
        </li>
        <li class="nav-item <%= 'active' if current_page?(contact_path) %>">
          <%= link_to "Contact", contact_path, class:"nav-link" %>
        </li>
      </ul>
      <div class="ml-auto">
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    if (window.matchMedia("(min-width: 768px)").matches) {
      const header = document.querySelector("nav.navbar.sticky-top");

      let previousScroll = window.pageYOffset;

      window.addEventListener("wheel", (event) => {
        const deltaY = event.deltaY;
        const currentScroll = window.pageYOffset;

        if (currentScroll === 0) {
          // At top of page, slide in header
          header.classList.remove("slide-out");
          header.classList.add("slide-in");
        } else if (deltaY < -10) {
          // Scrolling up is negative deltaY
          header.classList.remove("slide-out");
          header.classList.add("slide-in");
        } else if (deltaY > 10) {
          // Scrolling down is positive deltaY
          header.classList.remove("slide-in");
          header.classList.add("slide-out");
        }

        previousScroll = currentScroll;
      });
    }
  });
</script>


</body>
