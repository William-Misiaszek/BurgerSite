<head>
  <style>

  .logo-container {
    background-color: #F8F8F8;
    border-radius: 15px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    padding: 10px;
    display: flex;
    align-items: center;
}

.logo-container .logo {
    width: 100px;
    height: 100px;
}

  .slide-in {
    top: 0;
  }

  .slide-out {
    top: -100%;
  }
  
  .navbar {
  background-color: #28282B;
  color: #fff;
  transition: top 1s ease-in-out;
}



    .navbar-brand {
      color: #fff;
    }

    .navbar-nav .nav-link {
      color: #fff;
    }

    .navbar-nav .active {
      font-weight: bold;
    }

@media (max-width: 768px) {
    .logo-container .logo {
        width: 35px;
        height: 35px;
    }

    .navbar-collapse {
        padding: 0 15px;
    }
}

  </style>
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark sticky-top" style="background-color: #000000;">
  <div class="logo-container">
    <div style="margin-right: 10px; cursor: pointer;" onclick="location.href='<%= root_path %>'">
      <%= image_tag "profile_pic.jpg", class: "logo" %>
    </div>
    <%= link_to "William Francis", root_path, class: "navbar-brand", style: "color: black;" %>
  </div>

  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>










  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">

      
        <li class="nav-item <%= 'active' if current_page?(portfolio_path) %>">
          <%= link_to "Tech", portfolio_path, class:"nav-link" %>
        </li>
        <li class="nav-item <%= 'active' if current_page?(social_path) %>">
          <%= link_to "Music", social_path, class:"nav-link" %>
        </li>
        <li class="nav-item <%= 'active' if current_page?(contact_path) %>">
          <%= link_to "Social", contact_path, class:"nav-link" %>
        </li>
      </ul>
      <div class="ml-auto">
  <%= form_tag search_google_path, method: :get, class: 'form-inline my-2 my-lg-0' do %>
    <%= text_field_tag :query, params[:query], placeholder: 'Search', class: 'form-control mr-sm-2', 'aria-label': 'Search' %>
    <%= submit_tag 'Search', class: 'btn btn-outline-light my-2 my-sm-0', name: nil %>
  <% end %>
</div>

    
    </div>
  </nav>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    if (window.matchMedia("(min-width: 768px)").matches) {
      const header = document.querySelector("nav.navbar.sticky-top");

      let previousScroll = window.pageYOffset;

      window.addEventListener("wheel", (event) => {
        const deltaY = event.deltaY;
        const currentScroll = window.pageYOffset;

        if (currentScroll === 0) {
          // At top of page, slide in header
          header.classList.remove("slide-out");
          header.classList.add("slide-in");
        } else if (deltaY < -10) {
          // Scrolling up is negative deltaY
          header.classList.remove("slide-out");
          header.classList.add("slide-in");
        } else if (deltaY > 10) {
          // Scrolling down is positive deltaY
          header.classList.remove("slide-in");
          header.classList.add("slide-out");
        }

        previousScroll = currentScroll;
      });
    }
  });
</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>



</body>
